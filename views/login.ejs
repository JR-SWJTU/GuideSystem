    <script type="text/javascript">
        /*复选框单选js*/
        $("#student").click(function(){
            $("#student").attr('checked',true);
            if($("#admin").is(':checked'))
                $("#admin").attr('checked',false);
        });
        $("#admin").click(function(){
            $("#admin").attr('checked',true);
            if($("#student").is(':checked'))
                $("#student").attr('checked',false);
        });

        /*登陆ajax提交*/
        $("#loginButton").click(function(){
            var email = $("#email").val();
            var password = $("#password").val();
            var userType;
            if($("#student").attr('checked') )
                userType = 0;
            else
                userType = 1;

            $.ajax({
                type: "post",
                url: "/login",
                data : {
                    email: email,
                    password: password,
                    userType: userType,
                },
                 success: function(data){
                            var info = eval(data);
                            if(info.res == "1"){
                                if(info.userType == 0){
                                    window.location.href = '/mainPage?userName=' + info.userName ;
                                    // alert(window.location.href);
                                }
                                else
                                    window.location.href = '/back_mainPage?userName=' + info.userName;
                            }else{
                                $("#EmailWarning").toggle();
                                $("#EmailWarning").html("邮箱或者密码错误");
                            }
                        }   
                 });
        });

    </script> 
    
