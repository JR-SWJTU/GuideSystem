    <script type="text/javascript">
        $("#feedbackSub").click(function(){
            var type ;
            if($("#option1").is(':checked'))
                type = $("#option1").val();
            else if($("#option2").is(':checked'))
                type = $("#option2").val();
            else if($("#option3").is(':checked'))
                type = $("#option3").val();
            else if($("#option4").is(':checked'))
                type = $("#option4").val();

            var title = $("#title").val();
            var content = $("#content").val();
            $.ajax({
                type: "post",
                url: "/mainPage/feedback",
                data : {
                    type: type,
                    title: title,
                    content: content
                },
                 success: function(data){
                        var info = eval(data);
                        if(info.res == "1" ){
                            $('#tips').modal('show');
                        }
                        else if(info.res == "0"){
                            alert("反馈失败");
                        }
                    }   
                 });
        });

        $("#sure").click(function(){
            window.location.href = "/mainPage";
        })

    </script>
